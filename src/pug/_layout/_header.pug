- var regions = ['UA', 'RU', 'DE', 'KZ', 'AT', 'CA', 'US', 'Other']
- var userNav = ['CMS Upline24 3.0', 'Мои покупки', 'Мои мероприятия', 'Мои партнеры', 'Мои видео']
- var langs = [{abbr: 'RU', title: 'Русский'}, {abbr: 'EN', title: 'English'}]

